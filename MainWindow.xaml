<Window x:Class="TetrisWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tetris WPF" 
        Height="600" Width="400"
        MinHeight="600" MinWidth="400"
        ResizeMode="CanResize"
        SizeChanged="Window_SizeChanged">
    
    <Grid>
        <!-- Define two columns: one for the game canvas and one for the controls -->
        <Grid.ColumnDefinitions>
            <!-- Game Canvas Column - use star sizing for responsiveness -->
            <ColumnDefinition Width="2*" MinWidth="200"/>
            <!-- Control Panel Column -->
            <ColumnDefinition Width="*" MinWidth="120"/>
        </Grid.ColumnDefinitions>

        <!-- Use Viewbox to make the game canvas responsive to window size -->
        <Viewbox Grid.Column="0" Stretch="Uniform" Margin="5">
            <Canvas x:Name="GameCanvas" Width="240" Height="480"/>
        </Viewbox>

        <!-- the right panel -->
        <StackPanel Grid.Column="1" Margin="5">
            <!-- display player name -->
            <Viewbox Stretch="Uniform" MaxHeight="40" Margin="0,0,0,10">
                <TextBlock x:Name="PlayerNameText" Text="Player: Unknown" FontWeight="Bold"/>
            </Viewbox>

            <!-- Next piece preview -->
            <TextBlock x:Name="NextLabel" Text="Next:" FontWeight="Bold" Margin="0,0,0,5"/>
            <Canvas x:Name="NextCanvas" Width="100" Height="100" Background="Gray" HorizontalAlignment="Left"/>

            <!-- Score display -->
            <TextBlock x:Name="ScoreLabel" Text="Score:" FontWeight="Bold" Margin="0,10,0,0"/>
            <TextBlock x:Name="ScoreText" Text="0" FontSize="16"/>

            <!-- Pause button -->
            <Button x:Name="PauseButton" Content="Pause" Margin="0,10,0,0" Width="120" Height="35"
                FontWeight="Bold" Foreground="White" BorderThickness="1" Click="PauseButton_Click">
                <Button.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#6A85FF" Offset="0"/>
                        <GradientStop Color="#4C5AFF" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
                <Button.Effect>
                    <DropShadowEffect Color="Black" Direction="320" ShadowDepth="3" Opacity="0.5" BlurRadius="4"/>
                </Button.Effect>
            </Button>


            <!-- Restart button -->
            <Button x:Name="RestartButton" Content="Restart Game" Margin="0,20,0,0" Click="RestartButton_Click"
                    Width="120" Height="35"
                    FontWeight="Bold"
                    Foreground="White"
                    BorderThickness="1">
                <Button.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#FF6A85" Offset="0"/>
                        <GradientStop Color="#FF4C5A" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
                <Button.Effect>
                    <DropShadowEffect Color="Black" Direction="320" ShadowDepth="3" Opacity="0.5" BlurRadius="4"/>
                </Button.Effect>
            </Button>

        </StackPanel>
    </Grid>
</Window>
